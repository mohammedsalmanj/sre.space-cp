<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SRE.Space | Cyber-Insurance Playground</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
        href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600;700;800&family=JetBrains+Mono&display=swap"
        rel="stylesheet">
    <style>
        :root {
            --neon-blue: #00f2fe;
            --neon-purple: #7000ff;
            --cyber-black: #020205;
        }

        body {
            font-family: 'Outfit', sans-serif;
            background: var(--cyber-black);
            color: #fff;
            overflow-x: hidden;
            background-image:
                radial-gradient(circle at 100% 0%, rgba(112, 0, 255, 0.15) 0%, transparent 50%),
                radial-gradient(circle at 0% 100%, rgba(0, 242, 300, 0.1) 0%, transparent 50%);
            min-height: 100vh;
        }

        .cyber-grid {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image:
                linear-gradient(rgba(255, 255, 255, 0.02) 1px, transparent 1px),
                linear-gradient(90deg, rgba(255, 255, 255, 0.02) 1px, transparent 1px);
            background-size: 50px 50px;
            pointer-events: none;
            z-index: -1;
        }

        .glass-card {
            background: rgba(15, 23, 42, 0.6);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 24px;
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        }

        .glass-card:hover {
            transform: translateY(-10px) scale(1.02);
            border-color: var(--neon-blue);
            box-shadow: 0 0 30px rgba(0, 242, 254, 0.2);
        }

        .btn-cyber {
            background: linear-gradient(90deg, var(--neon-blue), var(--neon-purple));
            color: #000;
            font-weight: 800;
            text-transform: uppercase;
            letter-spacing: 1px;
            border-radius: 12px;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .btn-cyber:hover {
            transform: translateY(-2px);
            box-shadow: 0 0 20px rgba(0, 242, 254, 0.4);
        }

        .btn-chaos {
            background: rgba(244, 63, 94, 0.1);
            border: 1px solid rgba(244, 63, 94, 0.3);
            color: #f43f5e;
            font-weight: 800;
            letter-spacing: 1px;
            transition: all 0.3s ease;
        }

        .btn-chaos:hover {
            background: #f43f5e;
            color: #fff;
            box-shadow: 0 0 30px rgba(244, 63, 94, 0.4);
        }

        .hud-terminal {
            font-family: 'JetBrains Mono', monospace;
            background: rgba(0, 0, 0, 0.8);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 20px;
            position: relative;
        }

        .hud-terminal::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 2px;
            background: var(--neon-blue);
            box-shadow: 0 0 10px var(--neon-blue);
            border-radius: 2px 2px 0 0;
        }

        .log-line {
            padding: 4px 0;
            font-size: 13px;
        }

        /* --- Animations --- */
        @keyframes glitch {
            0% {
                transform: translate(0);
            }

            20% {
                transform: translate(-2px, 2px);
            }

            40% {
                transform: translate(-2px, -2px);
            }

            60% {
                transform: translate(2px, 2px);
            }

            80% {
                transform: translate(2px, -2px);
            }

            100% {
                transform: translate(0);
            }
        }

        .glitch-active {
            animation: glitch 0.2s infinite;
        }

        .glitch-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(244, 63, 94, 0.05);
            z-index: 1000;
            pointer-events: none;
            display: none;
        }
    </style>
</head>

<body class="p-4 md:p-12">
    <div class="cyber-grid"></div>
    <div id="glitch-overlay" class="glitch-overlay"></div>

    <div class="max-w-7xl mx-auto">
        <!-- Header -->
        <header class="flex flex-col md:flex-row justify-between items-start md:items-center mb-16 gap-6">
            <div>
                <h1 class="text-5xl font-black italic tracking-tighter">
                    <span class="text-white">SRE-SPACE</span><span class="text-[#00f2fe]">.CONTROL</span>
                </h1>
                <p class="text-slate-500 mt-2 font-semibold">Reliability Playground v5.0 ‚Äî Agentic Control Loop Active
                </p>
            </div>
            <div class="flex items-center gap-4">
                <button onclick="startTour()"
                    class="text-xs font-bold text-blue-400 hover:text-white transition-colors flex items-center gap-1 border border-blue-500/20 px-3 py-1 rounded-full bg-blue-500/5">
                    <span>‚ú®</span> START GUIDED TOUR
                </button>
                <button onclick="startSandbox()"
                    class="text-xs font-bold text-purple-400 hover:text-white transition-colors flex items-center gap-1 border border-purple-500/20 px-3 py-1 rounded-full bg-purple-500/5">
                    <span>üß™</span> START SANDBOX
                </button>
            </div>
            <div class="flex items-center gap-6">
                <div class="flex items-center gap-2 bg-white/5 p-1 rounded-xl border border-white/10"
                    id="mode-toggle-container">
                    <button onclick="setMode('real')" id="btn-mode-real"
                        class="px-3 py-1 text-[10px] font-black rounded-lg transition-all">REAL</button>
                    <button onclick="setMode('demo')" id="btn-mode-demo"
                        class="px-3 py-1 text-[10px] font-black rounded-lg transition-all bg-blue-500 text-black">DEMO</button>
                </div>
                <div class="text-right">
                    <div id="system-status"
                        class="text-xs font-black text-green-400 uppercase tracking-widest bg-green-400/10 px-3 py-1 rounded-full border border-green-400/20">
                        System Nominal</div>
                </div>
                <button onclick="triggerChaos()" class="btn-chaos px-6 py-3 rounded-xl flex items-center gap-2">
                    <span class="text-xl">üî•</span> INJECT CHAOS
                </button>
            </div>
        </header>

        <!-- New Tab Navigation -->
        <div class="flex gap-8 mb-10 border-b border-white/5">
            <button onclick="showTab('dashboard')" id="tab-dashboard"
                class="pb-4 text-sm font-black tracking-widest border-b-2 border-blue-500 text-white">DASHBOARD</button>
            <button onclick="showTab('deploy')" id="tab-deploy"
                class="pb-4 text-sm font-black tracking-widest border-b-2 border-transparent text-slate-500 hover:text-white transition-all">DEPLOY
                TO PROD</button>
        </div>

        <div id="tab-content-dashboard">
            <div class="grid grid-cols-1 lg:grid-cols-12 gap-10">
                <!-- Marketplace Display -->
                <div class="lg:col-span-7 space-y-10">
                    <div class="flex items-center justify-between">
                        <h2 class="text-3xl font-extrabold tracking-tight">Active Policy Tiers</h2>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                        <div class="glass-card p-10 cursor-pointer" onclick="processQuote('Life Premium')">
                            <div
                                class="w-16 h-16 bg-blue-500/10 rounded-2xl flex items-center justify-center text-4xl mb-6 border border-blue-500/20">
                                ‚ù§Ô∏è</div>
                            <h3 class="text-2xl font-black mb-3 text-white">Life Elite</h3>
                            <p class="text-slate-400 text-sm leading-relaxed mb-10">High-fidelity coverage with embedded
                                autonomous claim verification agents.</p>
                            <button class="btn-cyber w-full py-4">GET QUOTE</button>
                        </div>

                        <div class="glass-card p-10 cursor-pointer" onclick="processQuote('Cyber Shield')">
                            <div
                                class="w-16 h-16 bg-purple-500/10 rounded-2xl flex items-center justify-center text-4xl mb-6 border border-purple-500/20">
                                üõ°Ô∏è</div>
                            <h3 class="text-2xl font-black mb-3 text-white">Cyber Shield</h3>
                            <p class="text-slate-400 text-sm leading-relaxed mb-10">Comprehensive protection against
                                logic flows and state corruption anomalies.</p>
                            <button class="btn-cyber w-full py-4">DEPLOY COVER</button>
                        </div>
                    </div>

                    <div class="glass-card p-8 grid grid-cols-3 gap-8">
                        <div class="text-center">
                            <span class="text-xs font-bold text-slate-500 uppercase tracking-widest">MTTR</span>
                            <div class="text-2xl font-black mt-1 text-white">4.2m</div>
                        </div>
                        <div class="text-center border-x border-white/5">
                            <span class="text-xs font-bold text-slate-500 uppercase tracking-widest">Resilience</span>
                            <div class="text-2xl font-black mt-1 text-green-400">99.8%</div>
                        </div>
                        <div class="text-center">
                            <span class="text-xs font-bold text-slate-500 uppercase tracking-widest">Active
                                Threads</span>
                            <div class="text-2xl font-black mt-1 text-blue-400">124</div>
                        </div>
                    </div>
                </div>

                <!-- Agent Squad Monitor (HUD) -->
                <div class="lg:col-span-5 flex flex-col">
                    <h2 class="text-3xl font-extrabold tracking-tight mb-10">Sensory Intake</h2>
                    <div class="hud-terminal flex-1 flex flex-col overflow-hidden mb-8">
                        <div
                            class="bg-white/5 px-6 py-3 flex justify-between items-center text-[10px] font-black uppercase text-slate-500">
                            <div class="flex items-center gap-2">
                                <span class="w-2 h-2 bg-blue-500 rounded-full animate-pulse"></span> STREAMING OODA
                                TELEMETRY
                            </div>
                            <div id="loading-spinner" class="hidden">SYNCING...</div>
                        </div>
                        <div id="logs" class="p-8 overflow-y-auto flex-1 font-mono text-sm space-y-2 scrollbar-hide">
                            <div class="text-slate-600 italic">Awaiting sensor data...</div>
                        </div>
                        <div class="bg-white/5 p-4 text-[9px] text-center text-slate-600 font-bold tracking-[4px]">///
                            COGNITIVE CONTROL PLANE INTERFACE ///</div>
                    </div>

                    <!-- Chaos Lab Section -->
                    <div class="glass-card p-8">
                        <div class="flex items-center justify-between mb-6">
                            <h3 class="text-xl font-bold text-white flex items-center gap-2">
                                <span class="text-rose-500">üõ°Ô∏è</span> Chaos Lab
                            </h3>
                            <span id="current-stack"
                                class="text-[10px] font-black bg-blue-500/10 text-blue-400 px-2 py-1 rounded border border-blue-500/20 uppercase">Stack:
                                ...</span>
                        </div>
                        <div class="grid grid-cols-1 gap-4" id="chaos-lab-buttons">
                            <button onclick="triggerSimulation('AWS_EC2_DISK_FULL')" id="btn-ec2"
                                class="text-sm font-bold bg-white/5 hover:bg-rose-500/20 text-rose-400 p-3 rounded-lg border border-white/5 hover:border-rose-500/30 transition-all text-left flex justify-between items-center group">
                                <span>üöÄ [EC2] EBS Volume Exhaustion</span>
                                <span class="opacity-0 group-hover:opacity-100">RUN ‚Üí</span>
                            </button>
                            <button onclick="triggerSimulation('K8S_POD_CRASH')" id="btn-kubernetes"
                                class="text-sm font-bold bg-white/5 hover:bg-rose-500/20 text-rose-400 p-3 rounded-lg border border-white/5 hover:border-rose-500/30 transition-all text-left flex justify-between items-center group">
                                <span>‚ò∏Ô∏è [K8S] CrashLoopBackOff Injection</span>
                                <span class="opacity-0 group-hover:opacity-100">RUN ‚Üí</span>
                            </button>
                            <button onclick="triggerSimulation('GCE_CPU_BURN')" id="btn-gce"
                                class="text-sm font-bold bg-white/5 hover:bg-rose-500/20 text-rose-400 p-3 rounded-lg border border-white/5 hover:border-rose-500/30 transition-all text-left flex justify-between items-center group">
                                <span>‚òÅÔ∏è [GCE] Compute Soft Lockup</span>
                                <span class="opacity-0 group-hover:opacity-100">RUN ‚Üí</span>
                            </button>
                        </div>
                        <p class="text-[10px] text-slate-500 mt-4 italic">* SIMULATION_MODE active: Fixer will only
                            simulate mutations.</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Deploy Tab Content (Standard across both apps) -->
        <div id="tab-content-deploy" class="hidden space-y-12">
            <div class="glass-card p-12">
                <h2 class="text-4xl font-black mb-8 tracking-tighter text-blue-400">PRODUCTION DEPLOYMENT GUIDE</h2>
                <div class="space-y-10">
                    <section>
                        <h3 class="text-xl font-bold text-white mb-4 flex items-center gap-3">
                            <span
                                class="w-8 h-8 rounded-full bg-blue-500/20 flex items-center justify-center text-sm font-black text-blue-400 border border-blue-500/30">A</span>
                            The Host Infrastructure
                        </h3>
                        <div
                            class="bg-white/5 p-6 rounded-2xl border border-white/5 text-slate-300 leading-relaxed text-sm">
                            <p class="mb-4">Deploy on a Linux VM (Ubuntu 22.04+). 2 vCPU / 4GB RAM minimum.</p>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>

    <!-- Onboarding Modal (Integrated) -->
    <div id="onboarding-modal"
        class="fixed inset-0 z-[2000] hidden flex items-center justify-center p-6 bg-black/80 backdrop-blur-md">
        <div class="glass-card max-w-2xl w-full p-12 relative overflow-hidden">
            <h2 class="text-4xl font-black mb-10 tracking-tighter">ORBITAL SETUP</h2>
            <div class="grid grid-cols-2 gap-6">
                <button onclick="selectStack('aws')"
                    class="p-6 rounded-2xl border border-white/10 hover:border-blue-400 transition-all text-left">
                    <div class="text-2xl mb-2">üöÄ</div>
                    <div class="font-bold">AWS</div>
                </button>
                <button onclick="selectStack('local')"
                    class="p-6 rounded-2xl border border-white/10 hover:border-blue-400 transition-all text-left">
                    <div class="text-2xl mb-2">üß™</div>
                    <div class="font-bold">Sandbox</div>
                </button>
            </div>
            <button onclick="skipOnboarding()"
                class="w-full mt-6 text-[10px] uppercase font-bold text-slate-500 hover:text-white">Skip ‚Üí</button>
        </div>
    </div>

    <script>
        const logContainer = document.getElementById('logs');
        const systemStatus = document.getElementById('system-status');
        const onboardingModal = document.getElementById('onboarding-modal');
        let isDemoMode = true;

        // Auto-Detect API URL based on origin
        const API_BASE = window.location.origin.includes('localhost') ? 'http://localhost:8001' : 'https://sre-space-cp.onrender.com';

        window.onload = async () => {
            // Check if already configured
            try {
                const res = await fetch(`${API_BASE}/system/health`);
                const data = await res.json();
                if (!data.env_stack) onboardingModal.classList.remove('hidden');
            } catch (e) { onboardingModal.classList.remove('hidden'); }

            // Start default background poll
            triggerSSEStream(false);
        };

        function addLog(msg) {
            const div = document.createElement('div');
            div.className = "log-line border-l-2 border-white/5 pl-3 mb-2";
            if (msg.includes('[SCOUT]')) div.innerHTML = `<span class="text-blue-400 font-bold">[SCOUT]</span> ${msg.split('[SCOUT]')[1]}`;
            else if (msg.includes('[BRAIN]')) div.innerHTML = `<span class="text-purple-400 font-bold">[BRAIN]</span> ${msg.split('[BRAIN]')[1]}`;
            else if (msg.includes('[FIXER]')) div.innerHTML = `<span class="text-orange-400 font-bold">[FIXER]</span> ${msg.split('[FIXER]')[1]}`;
            else div.innerText = msg;

            logContainer.appendChild(div);
            logContainer.scrollTop = logContainer.scrollHeight;
        }

        function triggerSSEStream(isAnomaly) {
            const es = new EventSource(`${API_BASE}/api/sre-loop?anomaly=${isAnomaly}&simulation=${isDemoMode}`);
            es.onmessage = (e) => {
                const data = JSON.parse(e.data);
                addLog(data.message);
                if (data.final_state) es.close();
            };
            es.onerror = () => es.close();
        }

        function setMode(mode) {
            isDemoMode = mode === 'demo';
            document.getElementById('btn-mode-demo').className = isDemoMode ? "px-3 py-1 bg-blue-500 text-black rounded-lg transition-all" : "px-3 py-1 text-slate-400 transition-all";
            document.getElementById('btn-mode-real').className = !isDemoMode ? "px-3 py-1 bg-green-500 text-black rounded-lg transition-all" : "px-3 py-1 text-slate-400 transition-all";
        }

        async function triggerSimulation(type) {
            logContainer.innerHTML = '';
            addLog(`System: Injecting ${type}...`);
            try {
                await fetch(`${API_BASE}/demo/chaos/trigger`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ fault: type })
                });
                triggerSSEStream(true);
            } catch (e) { addLog("[ERROR] Chaos bridge failed."); }
        }

        function showTab(tab) {
            document.getElementById('tab-content-dashboard').classList.toggle('hidden', tab !== 'dashboard');
            document.getElementById('tab-content-deploy').classList.toggle('hidden', tab !== 'deploy');
            document.getElementById('tab-dashboard').classList.toggle('border-blue-500', tab === 'dashboard');
            document.getElementById('tab-deploy').classList.toggle('border-blue-500', tab === 'deploy');
        }

        async function startSandbox() {
            logContainer.innerHTML = '';
            addLog("üß™ [SANDBOX] Starting Mock Environment...");
            const res = await fetch(`${API_BASE}/demo/sandbox/start`, { method: 'POST' });
            triggerSSEStream(true);
        }

        function skipOnboarding() { onboardingModal.classList.add('hidden'); }
        async function selectStack(s) {
            await fetch(`${API_BASE}/api/config/save`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ STACK_TYPE: s })
            });
            onboardingModal.classList.add('hidden');
            addLog(`System: ${s.toUpperCase()} Initialized.`);
        }
    </script>
</body>

</html>